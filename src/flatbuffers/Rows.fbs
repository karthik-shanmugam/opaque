namespace edu.berkeley.cs.rise.opaque.tuix;

// This file is part of the interface between Spark SQL and the SGX enclave --
// the "trusted-untrusted interface," or TUIX.

enum ColType : ubyte {
    BooleanType,
    IntegerType,
    LongType,
    FloatType,
    DoubleType,
    StringType,
    DateType,
}

table BooleanField {
    value:bool;
}

table IntegerField {
    value:int;
}

table LongField {
    value:long;
}

table FloatField {
    value:float;
}

table DoubleField {
    value:double;
}

table StringField {
    value:[ubyte];
    length:uint;
}

table DateField {
    value:int;
}

union FieldUnion {
    BooleanField, IntegerField, LongField, FloatField, DoubleField, StringField, DateField
}

table Field {
    value:FieldUnion;
    is_null:bool;
}

table Row {
    field_values:[Field];
    is_dummy:bool;
}

// Root of plaintext batch
table Rows {
//    parent_token: int;
//    child_token: int;
//    seq_num: int;
//    max_seq_num: int;
    rows:[Row];
}
